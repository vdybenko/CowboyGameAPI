{% extends 'CowboyDuelAdminBundle::layout.html.twig' %}
{% block title %}Add store item{% endblock %}

{% form_theme form _self %}

{% block field_row %}
    <div class="row">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        <div class="right">
        	{{ form_widget(form) }}
        </div>
    </div>
{% endblock field_row %}

{% block right %}
<div class="section">
	<div class="box">
		<div class="title">
			Add store item
			<span class="hide"></span>
		</div>
		<div class="content">		
			<form action="{{ path('admin_add_store_item') }}" method="post">
				{{ form_widget(form) }}	
				   			
   		 		<div class="row">   		 		
					<div class="right">						
						<button type="submit"><span>Submit</span></button>
						<a href="{{ path("store_list_items") }}" target="blank"  class="btn">
							<span>Відіслати на S3 список магазину<span>
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{% endblock %}