{% extends 'CowboyDuelAdminBundle::layout.html.twig' %}
{% block title %}Pеєстрація користувачів{% endblock %}


{% block right %}

<div class="section">
	<div class="box">
		<div class="title">
			Pеєстрація користувачів
			<span class="hide"></span>
		</div>
			<table>
				<thead>
        		 	<tr>
             			<th>Тип</th><th>Процентное соотношение</th>
             		</tr>
             	</thead>
				<tbody>
				  {% for e in  data.registered_Users_Of_Percentage %}			
          			<tr>
             			<td>
             			{% if e.key == '0' %}
             			    Не авторизирован
             			{% elseif e.key == 'F' %}
             			    Facebook
             			{% elseif e.key == 'E' %}
                            Email
                        {% endif %}
             			</td><td>{{ e.percentage }}</td>
         			</tr>
		 		  {% endfor%}
				</tbody>
			</table>
	</div>
</div>

{% endblock %}