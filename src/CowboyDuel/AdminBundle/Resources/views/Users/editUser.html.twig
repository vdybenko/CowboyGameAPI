{% extends 'CowboyDuelAdminBundle::layout.html.twig' %}
{% block title %}Edit user{% endblock %}

{% form_theme edit_form _self %}

{% block field_row %}
    <div class="row">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        <div class="right">
        	{{ form_widget(form) }}
        </div>
    </div>
{% endblock field_row %}

{% block right %}
<div class="section">
	<div class="box">
		<div class="title">
			Edit user
			<span class="hide"></span>
		</div>
		<div class="content">		
			<form action="{{ path("users_edit_user", { 'id': entity.userId }) }}" method="post">
				{{ form_widget(edit_form) }}	  
				<div class="row">   		 		
					<div class="right">						
						<button type="submit"><span>Submit</span></button>						
					</div>
				</div> 		 		
			</form>
		</div>
	</div>
</div>
{% endblock %}